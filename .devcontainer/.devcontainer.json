{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "waitFor": "onCreateCommand",
  "updateContentCommand": "npm install",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "npm start"
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "week-3-measurements.js"
      ]
    }
  },
  "portsAttributes": {
    "5000": {
      "label": "Tests",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [5000]
}
